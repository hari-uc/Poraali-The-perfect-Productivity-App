<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DevelopersActivity"
    android:id="@+id/devlayout">

    <TextView
        android:id="@+id/teaamheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Team"
        android:textSize="@dimen/_20ssp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="true"
        app:layout_constraintRight_toRightOf="@id/devlayout"
        app:layout_constraintLeft_toLeftOf="@id/devlayout"
        app:layout_constraintBottom_toTopOf="@id/dev_recycle"
        app:layout_constraintTop_toTopOf="@id/devlayout"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dev_recycle"
        android:layout_width="405dp"
        android:layout_height="667dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>