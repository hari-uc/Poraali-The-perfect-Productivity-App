<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuotesActivity.QuotesActivity"
    android:orientation="vertical"
    android:background="@color/bg_color_2">
    <ImageView
        android:id="@+id/imagebackquotes"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:src="@drawable/ic_leftarrow"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/linearablove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_color_2"
        tools:context=".QuotesActivity.QuotesActivity">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/englishbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:layout_weight="0.5"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="10dp"
                android:gravity="center"
                android:tag="1"
                android:text="ENGLISH"
                android:textColor="@drawable/text_color" />


            <RadioButton

                android:id="@+id/tamilbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:layout_weight="0.5"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="10dp"
                android:gravity="center"
                android:tag="1"
                android:text="TAMIL"
                android:textColor="@drawable/text_color" />

        </RadioGroup>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearablove">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Select Any Language ☝"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

    </FrameLayout>




</LinearLayout>